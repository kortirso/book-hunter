%h1 {{ category.caption_ru }}
%p {{ category.caption }}
.row
	.col-xs-12.col-sm-6.col-md-4{"ng-repeat" => "book in books"}
		%p {{ book.name_ru }}
		%p {{ book.author }}
		%p= link_to image_tag('', 'ng-src' => '{{ book.image }}', class: 'img-responsive'), '/#/book/{{ book.id }}'
		%p= link_to 'Скачать', '{{ book.link }}', class: 'btn'
