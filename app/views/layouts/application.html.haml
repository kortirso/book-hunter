!!! XHTML 5
%html
    %head
        %title= t('index.title')
        = stylesheet_link_tag 'application', media: 'all'
        = javascript_include_tag 'application'
        = csrf_meta_tags
    %body{"ng-app" => "library"}
        .container
            .row
                .col-xs-6.col-sm-4.col-md-3
                    - if current_admin
                        %p= current_admin.email
                        %p
                            = link_to "Выйти", destroy_admin_session_path, method: :delete, class: 'btn'
                            = link_to 'Новая книга', new_book_path, class: 'btn'
                    .locale_box
                        = link_to 'ENG', change_locale_path('en'), class: 'btn'
                        = link_to 'РУС', change_locale_path('ru'), class: 'btn'
                    %h3= t('menu.head')
                    = render 'layouts/menu'
                .col-xs-6.col-sm-8.col-md-9
                    = yield
                    %div{"ng-view" => ""}
