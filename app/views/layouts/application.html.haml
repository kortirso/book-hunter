!!! XHTML 5
%html
	%head
		%title Book-Hunter
		= stylesheet_link_tag 'application', media: 'all'
		= javascript_include_tag 'application'
		= csrf_meta_tags
	%body{"ng-app" => "library"}
		.container
			.row
				.col-xs-6.col-sm-4.col-md-3
					- if current_admin
						%p= current_admin.email
						%p= link_to "Выйти", destroy_admin_session_path, method: :delete, class: 'btn'
					%h3 Навигация в библиотеке
					= render 'layouts/menu'
				.col-xs-6.col-sm-8.col-md-9
					= yield
					%div{"ng-view" => ""}
