!!! XHTML 5
%html
	%head
		%title Book-Hunter
		= stylesheet_link_tag 'application', media: 'all'
		= javascript_include_tag 'application'
		= csrf_meta_tags
	%body{"ng-app" => "library"}
		.container
			.row
				.col-xs-6.col-sm-4.col-md-3
					%h3 Навигация в библиотеке
					= render 'layouts/menu'
				.col-xs-6.col-sm-8.col-md-9
					%div{"ng-view" => ""}
						= yield
